<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Court Location TextView -->
    <TextView
        android:id="@+id/tvCourtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Court Location"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <!-- Select Court Location Button -->
    <Button
        android:id="@+id/selectCourtButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Select Court Location" />

    <!-- Price of Admission TextView -->
    <TextView
        android:id="@+id/tvPriceOfAdmission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price of Admission"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <!-- Price of Admission EditText -->
    <EditText
        android:id="@+id/etPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter price"
        android:layout_marginBottom="16dp"/>

    <!-- Lights TextView -->
    <TextView
        android:id="@+id/tvLights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lights"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <!-- Lights RadioGroup -->
    <RadioGroup
        android:id="@+id/rgLights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <RadioButton
            android:id="@+id/radio_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="true"
            android:text="Yes"/>
        <RadioButton
            android:id="@+id/radio_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="false"
            android:text="No"/>
    </RadioGroup>

    <!-- Court Name TextView -->
    <TextView
        android:id="@+id/tvCourtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Court Name"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <!-- Court Name EditText -->
    <EditText
        android:id="@+id/etCourtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter court name"
        android:layout_marginBottom="16dp"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/court_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Submit" />

    <TextView
        android:id="@+id/tvSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success! Court information submitted."
        android:textColor="@android:color/holo_green_dark"
    android:layout_marginTop="8dp"
    android:visibility="gone" />

    <TextView
        android:id="@+id/failedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submission Failed"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Cancel"
    android:textColor="#FFFFFF"
 />
</LinearLayout>
